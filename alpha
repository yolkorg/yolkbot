latest_version=$(curl -s https://registry.npmjs.com/yolkbot | jq -r '.["dist-tags"].alpha')

new_version=$(echo $latest_version | awk -F- '{print $NF}')
new_version=$((new_version + 1))
new_version="0.0.0-$new_version"

echo "publishing $new_version"

bun pm pkg set "version=$new_version"

bun build/node.ts
bun build/browser.ts

npm publish --tag alpha

npm deprecate yolkbot@"< $new_version" "previous yolkbot alpha versions are considered unstable and unfit for use. please upgrade your package to the latest yolkbot version."