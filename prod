current_version=$(jq -r '.version' ./package.json)
version_arg="$1"

if ! [[ "$version_arg" =~ ^1\.[0-9]+\.[0-9]+$ ]]; then
    echo "Error: Version must be in format 1.x.x"
    exit 1
fi

sed -i '' "s/$current_version/$version_arg/g" package.json

echo "version updated in package.json to $version_arg"
echo "please visit the workflow to run secure publishing"
echo "https://github.com/yolkorg/yolkbot/actions/workflows/prod.yml"

# bun cli/build.js
# bun browser/compile.js
# npm publish
# bun cli/publish.js